<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Dariel Marlow</Authors>
    <Company>Degreed</Company>
    <Description>Decrypts an OWIN OAuth Bearer token to be used in ASP.NET Core.</Description>
    <PackageProjectUrl>https://github.com/dmarlow/BearerTokenBridge</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dmarlow/BearerTokenBridge.git</RepositoryUrl>
    <Version>1.0.1</Version>
    <PackageReleaseNotes>Adding ability to convert to new AuthenticationTicket version (v5).</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>BearerTokenBridge.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication" Version="2.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Abstractions" Version="2.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.0.0" />
  </ItemGroup>

</Project>
